" map
map , <leader>
nm -b h <C-p>
nm -b j <C-f>
nm -b k <C-b>
nm -b l <C-n>
nm -b -e H :back
nm -b -e L :forward
nm -b <c-j> j
nm -b <c-k> k
nm -b <leader>, :
nm -b -s -e <leader>qa qa
nm -b -s -e <leader>rs res
nm -b -s -e <leader>rh reh
nm -b -s -e <leader>af exto! FoxyProxy Standard
nm -b -s -e <leader>to tabo
nm -b <leader>tm :tabm 
nm -b -s -e <leader>td tabdetach
nm -b -s -e <leader>te bmark -tags Tmp
nm -b <s-left> 100h
nm -b <s-right> 100l
nm -b <leader>bd :bd! 
nm -b <leader>ms :bmarks 
nm -b <leader>mt :bmarks -T 
nm -b <leader>ma :bmark 
cm -b <down> <tab>
cm -b <up> <s-tab>

" set
